<?xml version="1.0"?>
<robot name="car" xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- Base -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.3 0.1"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.6 0.6 0.6 1"/>
      </material>
    </visual>
  </link>

  <!-- Left Wheel -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.07"/>
      </geometry>
      <material name="Black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </link>
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.2 0.15 0.035"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Right Wheel -->
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.07"/>
      </geometry>
      <material name="Black"/>
    </visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </link>
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="-0.2 -0.15 0.035"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Steering (Front Axle) -->
  <link name="steering">
    <visual>
      <geometry>
        <box size="0.1 0.3 0.04"/>
      </geometry>
      <material name="Blue">
        <color rgba="0.2 0.2 0.8 1"/>
      </material>
    </visual>
  </link>
  <joint name="steering_joint" type="revolute">
    <parent link="base_link"/>
    <child link="steering"/>
    <origin xyz="0.25 0 0.02"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.5" upper="0.5" effort="1" velocity="1"/>
  </joint>

  <!-- Lidar -->
  <link name="laser">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.04"/>
      </geometry>
      <material name="Red">
        <color rgba="0.8 0.1 0.1 1"/>
      </material>
    </visual>
  </link>
  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <origin xyz="0.22 0 0.12"/>
  </joint>

  <!-- IMU -->
  <link name="imu">
    <visual>
      <geometry>
        <box size="0.04 0.04 0.02"/>
      </geometry>
      <material name="Green">
        <color rgba="0.2 0.8 0.2 1"/>
      </material>
    </visual>
  </link>
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu"/>
    <origin xyz="0 0 0.07"/>
  </joint>
</robot>